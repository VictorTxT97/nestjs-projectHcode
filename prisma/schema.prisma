generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER   // Representa o usuário comum
  ADMIN  // Representa o administrador
}

model users {
  id        Int      @id @default(autoincrement()) @db.UnsignedInt
  name      String   @db.VarChar(63)
  email     String   @unique @db.VarChar(127)  // Garante que o email seja único
  password  String   @db.VarChar(127)
  birthAt   DateTime @db.Date
  role      Role     @default(USER)           // Campo role usando enum
  issuer    String?                          // Campo opcional para armazenar o issuer
  createdAt DateTime @default(now())          // Define a data de criação automaticamente
  updatedAt DateTime @updatedAt               // Atualiza automaticamente na modificação
}

